<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_button_retry"
            android:id="@+id/button_no_connection"
            android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error Getting Scripture"
            android:id="@+id/textView"
            android:textSize="22dp" android:layout_centerHorizontal="true"
            android:layout_above="@+id/button_no_connection" android:paddingBottom="8dp"/>
</RelativeLayout>