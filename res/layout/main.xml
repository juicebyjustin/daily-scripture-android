<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
                                                             xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scroll_view"


        >
    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:padding="10dp">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView_date"
                style="@android:style/TextAppearance.Small"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView_verse"
                style="@android:style/TextAppearance.Medium"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text=""
                android:id="@+id/textView_book"
                style="@android:style/TextAppearance.Medium"
                android:layout_gravity="right|center_vertical"
                android:width="300dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:paddingLeft="32dp"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_thoughts_title"
                style="@android:style/TextAppearance.Large"
                android:layout_gravity="left|center_vertical"
                android:text=""
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView_thoughts"
                style="@android:style/TextAppearance.Medium"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"/>

        <TextView
                android:layout_width="fill_parent"
                style="@android:style/TextAppearance.Large"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView_prayer_title"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView_prayer"
                style="@android:style/TextAppearance.Medium"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView_creator"
                android:layout_gravity="left|center_vertical"
                android:textStyle="italic"
                style="@android:style/TextAppearance.Small"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"/>

    </LinearLayout>
</ScrollView>
